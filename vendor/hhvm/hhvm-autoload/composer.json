{
  "name": "hhvm/hhvm-autoload",
  "replace": {
    "facebook/hhvm-autoload": "1.*"
  },
  "type": "composer-plugin",
  "bin": [ "bin/hh-autoload" ],
  "require": {
    "composer-plugin-api": "^1.0",
    "hhvm": "^3.23",
    "fredemmott/hack-error-suppressor": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.5",
    "91carriage/phpunit-hhi": "^5.5"
  },
  "autoload": {
    "classmap": [
      "src/Writer.php",
      "src/"
    ],
    "files": [
      "src/AutoloadMap.php",
      "src/Config.php",
      "src/TypeAssert.php"
    ]
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ]
  },
  "extra": {
    "class": [
      "Facebook\\AutoloadMap\\ComposerPlugin"
    ]
  }
}
